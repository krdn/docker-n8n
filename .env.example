# N8N Configuration Example
# Copy this file to .env and customize the values

# Domain Configuration
N8N_HOST=your-domain.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-domain.com

# Timezone (examples: Asia/Seoul, America/New_York, Europe/London)
TIMEZONE=Asia/Seoul

# PostgreSQL Database
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration
REDIS_DB=0

# N8N Encryption Key (Generate with: openssl rand -hex 32)
# CRITICAL: Keep this secret and backed up!
N8N_ENCRYPTION_KEY=your_generated_encryption_key_here

# Basic Authentication (optional)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_PASSWORD
